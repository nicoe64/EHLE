// AUFGABE 1 Blinky

#include "stm32f4xx.h"
#include "_mcpr_stm32f407.h"
#include <inttypes.h>


void u_delay(int usec){
	int i;
	int j = 3150000;
	
	for(i = 0; i< usec * j; i++){
		//if( 15 == 20){
		//}
	}		
}

int main(void)
{
	uint32_t i = 0;
	
	mcpr_SetSystemCoreClock();
	
	// Peripheral GPIOD einschalten
	RCC->AHB1ENR |= 1<<3|1;

	// Orange LED (Port D13) auf Ausgang schalten
	GPIOD->MODER |= 0x05000000; //1<<26;
	GPIOD->ODR |= 1<<12;
	
	while( 1 ) {
		if( (GPIOA->IDR & 1) != 0) { 
			GPIOD->ODR |= 1<<12; 
			u_delay(1);
			GPIOD->ODR &= 0xCFFF; // ~(1<<12);
			u_delay(1);
		} else { 
			GPIOD->ODR &= 0xCFFF; // ~(1<<12);Â 
		}
	}
		
}